@model IEnumerable<GestaoModel>

<div class="container p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-secondary">Gatti</h1>
        <div>
            <a class="btn btn-success mx-2" asp-controller="Gestao" asp-action="Exportar">
                <i class="bi bi-file-earmark-plus"></i> Exportar
            </a>
            <a class="btn btn-primary mx-2" asp-controller="Gestao" asp-action="Cadastrar">
                <i class="bi bi-plus-circle"></i> Cadastrar novo veículo
            </a>
        </div>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-sucess textess text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>

    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger textess text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }


    <table id="Gestao" class="table table-striped table-bordered text-center table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">Nome Avaliador</th>
                <th scope="col">Nome Vendedor</th>
                <th scope="col">Marca</th>
                <th scope="col">Modelo</th>
                <th scope="col">Data Atualização</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var gestao in Model)
                {
                    <tr>
                        <td>@gestao.Nome</td>
                        <td>@gestao.Telefone</td>
                        <td>@gestao.NomeAvaliador</td>
                        <td>@gestao.NomeVendedor</td>
                        <td>@gestao.MarcaCarro</td>
                        <td>@gestao.ModeloCarro</td>
                        <td>@gestao.DataUltimaAtualizacao.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Gestao" asp-action="Detalhes" asp-route-id="@gestao.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                <a asp-controller="Gestao" asp-action="Editar" asp-route-id="@gestao.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-controller="Gestao" asp-action="Excluir" asp-route-id="@gestao.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


